<beans>
	<bean id="userService"
		class="top.okay3r.spring.framework.pjc.service.UserServiceImpl">
		<!-- 引用类型 -->
		<property name="userDao" ref="userDao"></property>
	</bean>

	<!-- 该类有一个初始化方法 -->
	<bean id="userDao" class="top.okay3r.spring.framework.pjc.dao.UserDaoImpl"
		init-method="init">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<!-- 该类有一个初始化方法 -->
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource" scope="singleton">
		<property name="driverClassName"
			value="com.mysql.jdbc.Driver"></property>
		<property name="url"
			value="jdbc:mysql://127.0.0.1:3306/studyData"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>

</beans>